{% extends 'SzakdolgozatLayoutBundle:Main:index.html.twig' %}

{% block stilusok %}
    {{  parent() }}
    <link rel="stylesheet" href="{{ asset('css/apartment_list.css') }}" type="text/css">
{% endblock %}

{% block tartalom %}
    <div id="szuro">
        <p>Szűrési feltételek</p>
        <form action="{{ path('szallasok') }}" method="post">
            <input type="search" name="kereses" maxlength="100" placeholder="Keresés.."/><br>
            <select name="nev" id="nev">
                <option value="0">Válasszon..</option>
                {% for apartment in apartments %}
                    <option value="{{ apartment.id }}">{{ apartment.name }}</option>
                {% endfor %}
            </select>
        </form>
    </div>
    <div class="clear"></div>
    {% for apartment in apartments %}
        <article>
            <header>
                <a title="További információk" href="{{ path('szallas', {'id':apartment.id } ) }}">{{ apartment.name }}</a>
            </header>
            <div class="ajanlat-body">
                <div class="kep">
                    <img src="szallasKepek/szallas.belyegkep.kepnev" width="100" alt="">
                </div>
                <div class="leiras">
                    {{ apartment.city }}, {{ apartment.address }}
                    <br/><br/>
                </div>
                <div class="clear"></div>
                <p>
                    <a title="További információk" href="">
                        <img src="{{ asset('images/info.png') }}" width="30" alt="Megtekintés">
                    </a>
                </p>
            </div>
        </article>
    {% endfor %}
{% endblock %}