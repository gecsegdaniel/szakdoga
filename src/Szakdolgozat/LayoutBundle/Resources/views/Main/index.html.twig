<!doctype html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Szakdolgozat</title>
    {% block stilusok %}
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css"/>
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
    {% block javascriptek %}
    {% endblock %}
</head>
<body>
<header>
    <nav id="menu">
        {{ knp_menu_render('SzakdolgozatLayoutBundle:MenuBuilder:mainMenu') }}
    </nav>
</header>
<div id="top-div">
    <div id="belepes">
        <span class="ablakcim">Fiók</span>
        <div class="ablak">
            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                Üdvözlöjük {{ app.user.username }}!<br/>
                <ul>
                    <li><a href="{{ path('fos_user_profile_show') }}">Profil</a></li>
                    <li><a href="{{ path('foglalasaim') }}">Foglalásaim</a></li>
                    {% if is_granted("ROLE_ADMIN") %}
                        <li><a href="admin" target="_blank">Admin felület</a></li>
                    {% endif %}
                    <li><a href="{{ path('fos_user_security_logout') }}">Kilépés</a></li>
                </ul>
            {% else %}
                Az oldal teljeskörű használatához jelentkezzen be!<br/>
                <a href="{{ path('fos_user_security_login') }}">Belépés</a>
            {% endif %}
        </div>
    </div>

    <div id="kereses">
        <span class="ablakcim">Keresés</span>
        <div class="ablak">
            <table border="0" align="center">
                <form action="" method="post">
                    <tr>
                        <td><input type="search" name="kereses" maxlength="100" placeholder="Keresés.."/></td>
                        <td width="40">
                            <button type="submit"></button>
                        </td>
                    </tr>
                </form>
            </table>
        </div>
    </div>

    <div id="kozossegi">
        <span class="ablakcim">Közösségi oldalak</span>
        <div class="ablak">
            <ul>
                <li><a href="https://www.facebook.com/" target="_blank"><img src="{{ asset('images/facebook.png') }}" alt=""></a></li>
                <li><a href="https://twitter.com" target="_blank"><img src="{{ asset('images/twitter.png') }}" alt=""></a></li>
                <li><a href="https://plus.google.com" target="_blank"><img src="{{ asset('images/googleplus.png') }}" alt=""></a></li>
            </ul>
        </div>
    </div>
    <div class="clear"></div>
</div>
<div class="clear"></div>
<div id="body-div">
    <div id="tartalom-div">
        {% block tartalom %}
        {% endblock %}
    </div>
    {% block counter %}
    {% endblock %}
    <div id="mid-oldal">
        <span class="ablakcim">Hasznos likek</span>
        <div class="ablak">
            juhuj<br>
            juhuj<br>
            juhuj<br>
            juhuj<br>
            juhuj<br>
            telegyélnagy
        </div>
    </div>
</div>
<footer>
    <p>Copyright &copy; Gécseg Dániel - szakdolgozat</p>
</footer>
</body>
</html>